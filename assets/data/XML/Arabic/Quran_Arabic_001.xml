<?xml version="1.0" encoding="utf-8"?><sura id="1" name="الفاتحة">
  <aya id="0" text="أعوذ بالله من الشيطان الرجي" />
  <aya id="1" text="بِسْمِ اللهِ الرَّحْمنِ الرَّحِيمِ" />
  <aya id="2" text="الْحَمْدُ للّهِ رَبِّ الْعَالَمِينَ" />
  <aya id="3" text="الرَّحْمـنِ الرَّحِي" />
  <aya id="4" text="مَالِكِ يَوْمِ الدِّينِ" />
  <aya id="5" text="إِيَّاكَ نَعْبُدُ وإِيَّاكَ نَسْتَعِينُ" />
  <aya id="6" text="اهدِنَــــا الصِّرَاطَ المُستَقِيمَ" />
  <aya id="7" text="صِرَاطَ الَّذِينَ أَنعَمتَ عَلَيهِمْ غَيرِ المَغضُوبِ عَلَيهِمْ وَلاَ الضَّالِّينَ" />
</sura>
